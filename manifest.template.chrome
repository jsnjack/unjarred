{
  "manifest_version": 3,
  "name": "unjarred",
  "description": "See what's inside. Monitor cookies in real-time.",
  "version": "${VERSION}",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": ["cookies", "sidePanel", "scripting", "activeTab", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "unjarred"
  },
  "side_panel": {
    "default_path": "index.html"
  }
}
